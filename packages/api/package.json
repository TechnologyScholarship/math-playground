{
  "name": "@t4/api",
  "version": "2.0.0",
  "main": "src/index.ts",
  "license": "MIT",
  "scripts": {
    "dev": "wrangler dev",
    "generate": "drizzle-kit generate --schema ./drizzle.config.ts --dialect sqlite --out ./migrations",
    "migrate": "wrangler d1 migrations apply production",
    "migrate:local": "wrangler d1 migrations apply production --local",
    "seed": "wrangler d1 execute production --file=./seed/seed.sql",
    "seed:local": "wrangler d1 execute production --local --file=./seed/seed.sql",
    "studio": "drizzle-kit studio",
    "deploy": "wrangler deploy --minify src/worker.ts",
    "postinstall": "bun generate",
    "clean": "rm -rf .turbo node_modules"
  },
  "dependencies": {
    "@hono/trpc-server": "^0.3.2",
    "@trpc/server": "^10.45.2",
    "@tsndr/cloudflare-worker-jwt": "2.5.3",
    "drizzle-orm": "^0.32.1",
    "drizzle-valibot": "beta",
    "hono": "^4.5.1",
    "miniflare": "3.20240718.0",
    "superjson": "2.2.1",
    "valibot": "^0.36.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240722.0",
    "drizzle-kit": "^0.23.0",
    "typescript": "^5.5.4",
    "wrangler": "3.66.0"
  }
}
